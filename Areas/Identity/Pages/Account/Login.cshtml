@page
@model LoginModel

@{
    ViewData["Title"] = "Log-In Page";
}
<style>
    body {
        background-color: #eff6ed;
    }

    .form-control {
        background-color: #d4e7ce;
        color: #333;
        border-radius: 15px;
    }

        .form-control::placeholder {
            color: #888;
        }

    a {
        color: #007bff; 
    }
   
        a:hover {
            color: #0056b3; 
        }
        
        a:visited {
            color: #6f42c1; 
        }

        a:active {
            color: #dc3545; 
        }

    .is-invalid {
        border-color: #dc3545;
        background-color: #f8d7da; 
    }
</style>

<center><h1>@ViewData["Title"]</h1></center>

<center>
    <h5>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have an account, click here to Register</a>
    </h5>
</center>

<div class="container">
<div class="row justify-content-center align-items-center min-vh-90">
    <div class="col-md-5">
        <form id="account" method="post">
            <center><h4>Use your credintials to log in</h4></center>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
            </div>
            <div>
                <h6>

                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </h6>
            </div>
        </form>
    </div>
    </div>
</div>
    
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
