@page
@model FinancialApp.Areas.Identity.Pages.Account.EmailSenderModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Confirm Your Email</title>
</head>
<body>
<p>Hello @Model.UserName,</p>
<p>Thank you for registering with us. Please click the link below to confirm your email address:</p>
<p><a href="@Model.ConfirmationLink">Confirm your email</a></p>
<p>If you did not register for an account, please ignore this email.</p>
</body>
</html>
